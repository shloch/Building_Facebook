<% @you_and_friends_posts.each_with_index do |p,index| %>
  <div class="card col-xl-12 col-lg-12 col-md-12">
    <div class="card-header"> <strong><%= p.author.name%> </strong>, <%= p.created_at%>  </div>
    <div class="card-body">
      <p>
        <%= p.post_text%>
      </p>
      <hr>
      <span>
        Likes : <%= p.like_total %>
      </span>
    </div>
    <div class="card-footer">
      <%= link_to controller: 'posts', action: 'add_post_like', post_id: p.id, user_id: p.author_id  do %>
        <button type="button" class="btn btn-light">
          <i class="fa fa-thumbs-up" aria-hidden="true"></i> Like
        </button>
      <% end %>
      <button
              type="button"
              class="btn btn-light"
              data-toggle="collapse"
              data-target="#collapse<%= index %>"
              aria-expanded="false"
              aria-controls="collapse<%= index %>"
            >
        <i class="fa fa-comments" aria-hidden="true"></i>
        Comments
      </button>
      <div class="collapse" id="collapse<%= index %>">
        <div class="card card-body">
          <% p.post_comments.each do |comment| %>
            <div class="comment-row row">
              <div class="col-xl-2 d-flex justify-content-center">
                <div class="user-circle-sm"></div>
              </div>
              <div class="col-xl-10">
                <p><strong> <%=comment.user.name %> </strong> </p>
                <p>
                  <%=comment.comment_text %>
                </p>
              </div>
            </div>
            <hr>
          <% end %>
          <hr>
          <div class="comment-row row">
            <div class="col-xl-2 d-flex justify-content-center">
              <div class="user-circle-sm"></div>
            </div>
            <div class="col-xl-10">
              <!----comment form-------->
              <%= form_for(@post_comment) do |f| %>
                <div class="input-group mb-3">
                  <%= f.text_field :comment_text, class: 'form-control', placeholder: "Your comment", "aria-label": "Recipient's username", "aria-describedby": "basic-addon2"  %>
                  <%= hidden_field_tag 'post_id', p.id  %>
                  <%= hidden_field_tag 'user_id', @user_id %>
                  <div class="input-group-append">
                    <%= f.submit "submit", class: "btn btn-outline-secondary" %>
                  </div>
                </div>
              <% end %>
              <!----comment form [end]-------->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
