<% provide(:title, 'Home') %>
<div class="center jumbotron">
  <h1>Welcome to FACEBOOK</h1>
  <% user = current_user()  %>
  <% if user_signed_in? %>
    <div>Signed in as... <b><%= current_user.email %></b></div>
    <li>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    </li>
    <li>
      <%= link_to('Edit Account', edit_user_registration_path) %>
    </li>
  <% else %>
    <li><%= link_to('Login via facebook', user_facebook_omniauth_authorize_path) %></li>
  <% end %>
</div>
